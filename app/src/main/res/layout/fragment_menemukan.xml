<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="12dp"
    tools:context="com.androbos.bantutemuin.fragment.MenemukanFragment">


    <ImageView

        android:src="@drawable/barangditemukan"
        android:layout_centerHorizontal="true"
        android:id="@+id/temukan"
        android:layout_width="300dp"
        android:layout_height="300dp" />
    <TextView
        android:layout_marginTop="3dp"
        android:id="@+id/temukan_text"
        android:textSize="30sp"
        android:textColor="#fff"
        android:gravity="center_horizontal"
        android:layout_below="@+id/temukan"
        android:layout_centerHorizontal="true"
        android:text="Anda Menemukan Barang?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
